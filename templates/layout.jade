doctype html
block vars
  - var bodyClass = null;
  - var title = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/styles.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      script(src='/scripts/navigation.js')
      //to-do: move to index.jade
      script(src='/scripts/fullscreen_video.js')
  body(class="#{ bodyClass }")
    header
      div.container
        div.grid
          div.column.size12of12.med_size6of12
            h1#logo
              a(href=locals.url)= locals.name
    include navigation

    div#content
      div.container
        div.grid
          block content

    include footer
